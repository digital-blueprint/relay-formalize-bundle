{
    "name": "dbp/relay-formalize-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "api-platform/core": "^2.7.11 || ^3.2",
        "dbp/relay-authorization-bundle": "^0.1.8",
        "dbp/relay-core-bundle": "^0.1.160",
        "doctrine/annotations": "^2.0",
        "doctrine/dbal": "^3.8",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/migrations": "^3.7",
        "doctrine/orm": "^2.19",
        "justinrainbow/json-schema": "^5.2",
        "symfony/config": "^5.4 || ^6.4",
        "symfony/dependency-injection": "^5.4 || ^6.4",
        "symfony/event-dispatcher": "^5.4 || ^6.4",
        "symfony/event-dispatcher-contracts": "^2.5 || ^3",
        "symfony/framework-bundle": "^5.4.30 || ^6.4",
        "symfony/http-foundation": "^5.4 || ^6.4",
        "symfony/http-kernel": "^5.4 || ^6.4",
        "symfony/uid": "^5.4 || ^6.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.50",
        "phpstan/phpstan": "^1.10.59",
        "phpstan/phpstan-phpunit": "^1.3.16",
        "phpunit/phpunit": "^10.1",
        "symfony/browser-kit": "^5.4 || ^6.4",
        "symfony/http-client": "^5.4 || ^6.4",
        "symfony/monolog-bundle": "^3.10",
        "symfony/phpunit-bridge": "^7.0.4",
        "vimeo/psalm": "^5.22.2",
        "ext-pdo_sqlite": "*",
        "symfony/error-handler":"^5.4 || ^6.4",
        "symfony/monolog-bridge":"^5.4 || ^6.4"
    },
    "conflict": {
        "symfony/doctrine-bridge": "<6.4.7",
        "symfony/web-link": "<6.4.7"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\FormalizeBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\FormalizeBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": false
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
